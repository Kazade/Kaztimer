FIND_PATH( KAZTIMER_INCLUDE_DIRS kaztimer/kaztimer.h /usr/include /usr/local/include $ENV{INCLUDE} )
FIND_LIBRARY( KAZTIMER_LIBRARIES NAMES kaztimer PATHS /usr/lib /usr/local/lib )

IF(KAZTIMER_INCLUDE_DIRS)
	MESSAGE(STATUS "Found Kaztimer include dir: ${KAZTIMER_INCLUDE_DIRS}")
ELSE(KAZTIMER_INCLUDE_DIRS)
	MESSAGE(STATUS "Could NOT find Kaztimer headers.")
ENDIF(KAZTIMER_INCLUDE_DIRS)

IF(KAZTIMER_LIBRARIES)
	MESSAGE(STATUS "Found Kaztimer library: ${KAZTIMER_LIBRARIES}")
ELSE(KAZTIMER_LIBRARIES)
	MESSAGE(STATUS "Could NOT find Kaztimer library.")
ENDIF(KAZTIMER_LIBRARIES)

IF(KAZTIMER_INCLUDE_DIRS AND KAZTIMER_LIBRARIES)
	SET(KAZTIMER_FOUND "YES")
ELSE(KAZTIMER_INCLUDE_DIRS AND KAZTIMER_LIBRARIES)
	SET(KAZTIMER_FOUND "NO")
	IF(KAZTIMER_FIND_REQUIRED)
		MESSAGE(FATAL_ERROR "Could not find Kaztimer. Please install Kaztimer (http://github.com/kazade/kaztimer)")
	ENDIF(KAZTIMER_FIND_REQUIRED)
ENDIF(KAZTIMER_INCLUDE_DIRS AND KAZTIMER_LIBRARIES)
